@model IEnumerable<Biblioteca.Models.Libro>

<h1>Acciones para Libros</h1>

<div class="row">
    <div class="card">
        <div class="card-body">
            <form asp-action="CrearLibro">
                <div class="mt-3 d-flex flex-column">
                    <label for="">Código</label>
                    <input class="form-control" name="Codigo" />
                </div>
                <div class="mt-3 d-flex flex-column">
                    <label form="">Titulo</label>
                    <input type="text" class="form-control" name="Titulo"/>
                </div>
                <div class="mt-3 d-flex flex-column">
                    <label form="">Autor</label>
                    <input type="text" class="form-control" name="Autor"/>
                </div>
                <div class="mt-3 d-flex flex-column">
                    <label form="">Ejemplares Disponibles</label>
                    <input type="text" class="form-control" name="EjemplaresDisponibles"/>
                </div>
                <hr/>
                <button type="submit" class="btn btn-primary w-100">Guardar Libro</button>
            </form>
        </div>
    </div>
    
    <div class="table table-striped-columns">
        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>Codigo</th>
                <th>Titulo</th>
                <th>Autor</th>
                <th>Ejemplares Disponibles</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Codigo</td>
                    <td>@item.Titulo</td>
                    <td>@item.Autor</td>
                    <td>@item.EjemplaresDisponibles</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="EditarLibro" asp-route-id="@item.Id">Editar Libro</a>
                        <a class="btn btn-danger btn-sm"
                           asp-action="EliminarLibro"
                           asp-route-id="@item.Id"
                           onclick="return confirm('¿Estás seguro de eliminar este libro -> @item.Titulo')">Eliminar</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>