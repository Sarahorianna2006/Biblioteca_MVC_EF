@model IEnumerable<Biblioteca.Models.PrestamoLibro>

<h1>Préstamos del usuario: @ViewBag.NombreUsuario</h1>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">Este usuario no tiene préstamos registrados.</div>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Libro</th>
            <th>Fecha Préstamo</th>
            <th>Fecha Devolución</th>
            <th>Estado</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Libro?.Titulo</td>
                <td>@p.FechaPrestamo.ToString("dd/MM/yyyy")</td>
                <td>@(p.FechaDevolucion?.ToString("dd/MM/yyyy") ?? "-")</td>
                <td>
                    @if (p.Devuelto)
                    {
                        <span class="badge bg-success">Devuelto</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">En préstamo</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}

