@model IEnumerable<Biblioteca.Models.PrestamoLibro>

<h1>Historial de Préstamos</h1>

<hr />

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No hay préstamos registrados en el historial.
    </div>
}
else
{
    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Libro</th>
            <th>Fecha Préstamo</th>
            <th>Fecha Devolución</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Usuario?.Nombre</td>
                <td>@p.Libro?.Titulo</td>
                <td>@p.FechaPrestamo.ToString("dd/MM/yyyy")</td>
                <td>@(p.FechaDevolucion?.ToString("dd/MM/yyyy") ?? "-")</td>
                <td>
                    @if (p.Devuelto)
                    {
                        <span class="badge bg-success">Devuelto</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">En préstamo</span>
                    }
                </td>
                <td>
                    <a asp-controller="PrestamoLibro"
                       asp-action="PrestamosPorUsuario"
                       asp-route-usuarioId="@p.UsuarioId"
                       class="btn btn-sm btn-info">
                        Ver préstamos del usuario
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}